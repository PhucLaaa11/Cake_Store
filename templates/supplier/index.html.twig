{% extends 'base.html.twig' %}

{% block title %}Customer list{% endblock %}

{% block body %}
    <h1>supplier list</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.date|date('d/m/y') }}</td>
                <td>
                    <a href="{{ path('app_supplier_details', {'id': supplier.id}) }} " class='btn btn-success'>View</a>
                    <a class="btn btn-warning" href="{{ path('app_supplier_edit', {'id': supplier.id}) }}">Edit</a>
                    <a class="btn btn-danger" href="{{ path('app_supplier_delete', {'id': supplier.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

